{
    "name": "wp-workspace-template",
    "description": "WordPress theme and plugin development environment",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@setup-wpcs"
        ],
        "post-update-cmd": [
            "@setup-wpcs"
        ],
        "setup-wpcs": [
            "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/phpcompatibility-wp"
        ],
        "check-themes": "vendor/bin/phpcs --standard=WordPress wp-content/themes/ --extensions=php --ignore=*/vendor/*,*/node_modules/*",
        "check-plugins": "vendor/bin/phpcs --standard=WordPress wp-content/plugins/ --extensions=php --ignore=*/vendor/*,*/node_modules/*",
        "fix-themes": "vendor/bin/phpcbf --standard=WordPress wp-content/themes/ --extensions=php --ignore=*/vendor/*,*/node_modules/*",
        "fix-plugins": "vendor/bin/phpcbf --standard=WordPress wp-content/plugins/ --extensions=php --ignore=*/vendor/*,*/node_modules/*"
    }
}
