<?xml version="1.0"?>
<ruleset name="WordPress Theme Development">
    <description>WordPress Coding Standards for custom theme and plugin development</description>

    <!-- What to scan -->
    <file>./wp-content/themes</file>
    <file>./wp-content/plugins</file>

    <!-- Exclude patterns -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>

    <!-- Show progress and colors -->
    <arg value="ps"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>

    <!-- Rules: WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        <exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
    </rule>

    <!-- WordPress Extra rules -->
    <rule ref="WordPress-Extra">
        <!-- Allow short ternary -->
        <exclude name="WordPress.PHP.DisallowShortTernary"/>
    </rule>

    <!-- WordPress Docs -->
    <rule ref="WordPress-Docs"/>

    <!-- Check for PHP cross-version compatibility -->
    <config name="testVersion" value="8.0-"/>
    <rule ref="PHPCompatibilityWP"/>

    <!-- Allow for theme/plugin specific adjustments -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <!-- Value: replace 'text-domain' with your project's text domain. -->
            <property name="text_domain" type="array">
                <element value="your-theme-slug"/>
                <element value="your-plugin-slug"/>
            </property>
        </properties>
    </rule>

    <!-- Verify that everything in the global namespace is prefixed -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <!-- Value: replace 'your_prefix' with your theme/plugin prefix. -->
            <property name="prefixes" type="array">
                <element value="your_prefix"/>
                <element value="YOUR_PREFIX"/>
            </property>
        </properties>
    </rule>
</ruleset>
